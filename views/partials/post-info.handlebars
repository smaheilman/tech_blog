<article class="post">
   
  <div class="title">
    <h3 class="">{{title}}<span class="date">Post by {{user.username}} on {{format_date created_at}}</span></h3>
    <p>
        {{post_url}}
    </p>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>